<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="aayush.programmingquiz.previousResults"
    android:background="#c1cdcd">

    <TextView
        android:id="@+id/displayResults"
        android:layout_width="348dp"
        android:layout_height="423dp"
        android:layout_marginLeft="16dp"
        android:text="TextView"
        android:textSize="18dp"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="72dp" />

    <Button
        android:id="@+id/toMenu"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginEnd="9dp"
        android:layout_marginStart="9dp"
        android:text="@string/mainMenu"
        app:layout_constraintLeft_toLeftOf="@+id/displayResults"
        app:layout_constraintRight_toLeftOf="@+id/playGame"
        app:layout_constraintTop_toBottomOf="@+id/displayResults"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1" />

    <Button
        android:id="@+id/playGame"
        android:layout_width="165dp"
        android:layout_height="48dp"
        android:layout_marginEnd="10dp"
        android:text="@string/start"
        app:layout_constraintRight_toRightOf="@+id/displayResults"
        app:layout_constraintTop_toBottomOf="@+id/displayResults"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1" />
</android.support.constraint.ConstraintLayout>
